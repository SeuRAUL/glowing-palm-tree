<div class="card col-md-6">
  <h2 class="card-header">Forgot your password?</h2>
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-3 form-group">
        <% f.label :email, class:"form-label"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"%>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class:"btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<br/>
<%= render "devise/shared/links" %>
